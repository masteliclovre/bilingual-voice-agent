# ====================================
# LLM Configuration
# ====================================

# LLM Provider: "groq" or "openai"
LLM_PROVIDER=groq

# Groq Configuration (recommended - fast and free tier)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
# Alternative models: llama-3.1-8b-instant, mixtral-8x7b-32768

# OpenAI Configuration (alternative)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# LLM Generation Settings
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=150

# ====================================
# Voice Processing
# ====================================

# Whisper ASR Configuration
WHISPER_MODEL=GoranS/whisper-base-1m.hr-ctranslate2
# Alternative: GoranS/whisper-large-v3-turbo-hr-parla-ctranslate2
WHISPER_DEVICE=cpu  # or "cuda" for GPU
WHISPER_COMPUTE=int8

# ElevenLabs TTS Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=vFQACl5nAIV0owAavYxE

# ====================================
# Smart RAG Configuration
# ====================================

# Enable/Disable RAG (lightweight pattern-based matching)
ENABLE_RAG=true

# Path to knowledge base JSON
KNOWLEDGE_PATH=knowledge.json

# Direct RAG answers (skip LLM for perfect matches)
# true = faster, cheaper | false = more natural responses
RAG_DIRECT_ANSWER=false

# ====================================
# Audio Settings (Voice Activity Detection)
# ====================================

FRAME_DURATION_MS=15
MAX_UTTERANCE_SECS=45
SILENCE_TIMEOUT_SECS=0.2
MIN_SPEECH_SECS=0.3
RMS_THRESH=0.003
RMS_HANGOVER=0.12

# Audio Feedback
BEEP_DELAY_MS=1000

# Audio Device Selection (optional)
# List devices with: python -c "import sounddevice; print(sounddevice.query_devices())"
PREFERRED_INPUT_NAME=
INPUT_DEVICE_INDEX=

# ====================================
# Memory Management
# ====================================

MAX_TURNS_IN_WINDOW=8
SUMMARY_UPDATE_EVERY=8

# ====================================
# Remote Agent Configuration
# ====================================

# For client connecting to remote server
REMOTE_AGENT_URL=http://localhost:8000
REMOTE_AGENT_TOKEN=your_secure_token_here
REMOTE_AGENT_API_KEY=your_groq_api_key_here

# For server authentication (must match REMOTE_AGENT_TOKEN)
REMOTE_SERVER_AUTH_TOKEN=your_secure_token_here

# ====================================
# Server Settings
# ====================================

PORT=8000

# HTTP Timeouts
HTTP_CONNECT_TIMEOUT=4.0
HTTP_READ_TIMEOUT=60.0
