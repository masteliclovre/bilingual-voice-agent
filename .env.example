# ====================================
# LLM Configuration
# ====================================

# LLM Provider: "groq" or "openai"
LLM_PROVIDER=groq

# Groq Configuration (if using Groq)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# LLM Generation Settings
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=150

# ====================================
# Voice Processing
# ====================================

# Whisper ASR Configuration
WHISPER_MODEL=GoranS/whisper-base-1m.hr-ctranslate2
WHISPER_DEVICE=cpu  # or "cuda" for GPU
WHISPER_COMPUTE=int8

# ElevenLabs TTS Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=vFQACl5nAIV0owAavYxE

# ====================================
# RAG Configuration
# ====================================

# Enable/Disable RAG
ENABLE_RAG=true

# Embedding Model Selection
# For multilingual support (Croatian + English)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Use OpenAI embeddings instead of sentence-transformers
USE_OPENAI_EMBEDDINGS=false
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chroma_db
COLLECTION_NAME=banking_knowledge

# RAG Search Settings
TOP_K_RESULTS=3
MIN_SIMILARITY_SCORE=0.5
RAG_CONFIDENCE_THRESHOLD=0.7

# ====================================
# Audio Settings
# ====================================

# Voice Activity Detection
FRAME_DURATION_MS=15
MAX_UTTERANCE_SECS=45
SILENCE_TIMEOUT_SECS=0.2
MIN_SPEECH_SECS=0.3
RMS_THRESH=0.003
RMS_HANGOVER=0.12

# Audio Feedback
BEEP_DELAY_MS=2000

# Audio Device Selection (optional)
PREFERRED_INPUT_NAME=
INPUT_DEVICE_INDEX=

# ====================================
# Memory Management
# ====================================

MAX_TURNS_IN_WINDOW=8
SUMMARY_UPDATE_EVERY=8

# ====================================
# Remote Agent Configuration
# ====================================

# For client connecting to remote server
REMOTE_AGENT_URL=http://localhost:8000
REMOTE_AGENT_TOKEN=optional_auth_token
REMOTE_AGENT_OPENAI_KEY=

# For server authentication
REMOTE_SERVER_AUTH_TOKEN=optional_auth_token

# ====================================
# Server Settings
# ====================================

PORT=8000

# HTTP Timeouts
HTTP_CONNECT_TIMEOUT=4.0
HTTP_READ_TIMEOUT=60.0
