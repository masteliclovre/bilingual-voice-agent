{
    "description": "HR stream to /twilio/hr",
    "states": [
    {
    "name": "Trigger",
    "type": "trigger",
    "transitions": [
    { "event": "incomingCall", "next": "stream_hr" },
    { "event": "incomingMessage", "next": null },
    { "event": "incomingRequest", "next": null }
    ],
    "properties": { "offset": { "x": 0, "y": 0 } }
    },
    {
        "name": "stream_hr",
        "type": "fork-stream",
        "transitions": [ { "event": "next", "next": null } ],
        "properties": {
        "stream_action": "start",
        "stream_name": "hr_leg",
        "stream_transport_type": "websocket",
        "stream_track": "both_tracks",
        "stream_url": "wss://YOUR_HOST/twilio/hr",
        "offset": { "x": 240, "y": 120 }
    }
    }
],
"initial_state": "Trigger",
"flags": { "allow_concurrent_calls": true }
}