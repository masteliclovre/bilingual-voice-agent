# =========================
# Whisper STT Configuration
# =========================
WHISPER_MODEL=GoranS/whisper-base-1m.hr-ctranslate2
# Alternative: GoranS/whisper-large-v3-turbo-hr-parla-ctranslate2
WHISPER_DEVICE=cpu
WHISPER_COMPUTE=int8

# =========================
# LLM Provider Configuration
# =========================
LLM_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
# Alternative models: llama-3.1-8b-instant, mixtral-8x7b-32768

# OpenAI (if you want to switch back to OpenAI)
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o-mini

# LLM Parameters
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=150

# =========================
# ElevenLabs TTS Configuration
# =========================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=vFQACl5nAIV0owAavYxE
ELEVEN_STREAM_LATENCY=0

# =========================
# Remote Server Configuration
# =========================
REMOTE_AGENT_URL=copy_url_from_remote_server
REMOTE_AGENT_TOKEN=add_your_own_token
REMOTE_AGENT_API_KEY=your_groq_api_key_here

# =========================
# Streaming Configuration
# =========================
STREAMING_MIN_CHARS=24
STREAMING_MAX_WAIT=0.4

# =========================
# VAD (Voice Activity Detection)
# =========================
SILENCE_TIMEOUT_SECS=0.2
MIN_SPEECH_SECS=0.2
RMS_THRESH=0.003
RMS_HANGOVER=0.10
FRAME_DURATION_MS=10

# =========================
# Memory Configuration
# =========================
MAX_TURNS_IN_WINDOW=8
SUMMARY_UPDATE_EVERY=8

# =========================
# HTTP Configuration
# =========================
HTTP_CONNECT_TIMEOUT=2.0
HTTP_READ_TIMEOUT=30.0

# =========================
# Timing Configuration
# =========================
EOS_DELAY_SECS=1
BEEP_DELAY_MS=1000

# =========================
# Optional: Wake Word
# =========================
# WAKE_WORD=hey assistant

# =========================
# Server Configuration
# =========================
PORT=8000
REMOTE_SERVER_AUTH_TOKEN=add_your_own_token
